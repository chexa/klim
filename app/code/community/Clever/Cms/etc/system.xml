<?xml version="1.0"?>
<config>
    <sections>
        <cms>
            <groups>
                <clever translate="label">
                    <label>Clever CMS</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <permissions_enabled translate="label">
                            <label>Enable permissions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>adminhtml/system_config_backend_store</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </permissions_enabled>
                        <save_rewrites_history translate="label">
                            <label>Create Permanent Redirect for URLs if URL Key Changed</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>adminhtml/system_config_backend_store</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </save_rewrites_history>

                        <root_cms_page translate="label" module="cms">
                            <label>Root CMS Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_cms_page</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </root_cms_page>

                    </fields>
                </clever>
            </groups>
        </cms>
    </sections>
    <default>
        <cms>
            <clever>
                <permissions_enabled>0</permissions_enabled>
                <save_rewrites_history>0</save_rewrites_history>
            </clever>
        </cms>
    </default>
</config>