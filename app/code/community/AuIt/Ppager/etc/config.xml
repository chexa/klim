<?xml version="1.0"?>
<config>
    <modules>
        <AuIt_Ppager>
            <version>1.3.2</version>
        </AuIt_Ppager>
    </modules>
    <frontend>
        <layout>
            <updates>
                <auit_ppager>
                    <file>auit_ppager.xml</file>
                </auit_ppager>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
                            <children>
                                <config>
                                    <children>
                                        <auit_ppager>
                                            <title>SNM Product Pager</title>
                                        </auit_ppager>
                                    </children>
                                </config>
                            </children>
                        </system>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>
    
    <global>
        <models>
            <auit_ppager>
                <class>AuIt_Ppager_Model</class>
            </auit_ppager>
        </models>
        <blocks>
            <auit_ppager>
                <class>AuIt_Ppager_Block</class>
            </auit_ppager>
        </blocks>
        <helpers>
            <auit_ppager>
                <class>AuIt_Ppager_Helper</class>
            </auit_ppager>
        </helpers>
		<events>
			<auit_ppager_extern_collection>
				<observers>
					<auit_ppager_observer>
						<type>singleton</type>
						<class>auit_ppager/observer</class>
						<method>externCollection</method>
					</auit_ppager_observer>
				</observers>
			</auit_ppager_extern_collection>
			<controller_action_postdispatch_catalog_category_view>
				<observers>
					<auit_ppager_observer>
						<type>singleton</type>
						<class>auit_ppager/observer</class>
						<method>controllerActionPostdispatch</method>
					</auit_ppager_observer>
				</observers>
			</controller_action_postdispatch_catalog_category_view>
			
			
			
			<controller_action_postdispatch_catalogsearch_advanced_result>
				<observers>
					<auit_ppager_observer>
						<type>singleton</type>
						<class>auit_ppager/observer</class>
						<method>controllerActionPostdispatchCatalogsearchAdvanced</method>
					</auit_ppager_observer>
				</observers>
			</controller_action_postdispatch_catalogsearch_advanced_result>
			
			<controller_action_postdispatch_catalogsearch_result_index>
				<observers>
					<auit_ppager_observer>
						<type>singleton</type>
						<class>auit_ppager/observer</class>
						<method>controllerActionPostdispatchCatalogsearch</method>
					</auit_ppager_observer>
				</observers>
			</controller_action_postdispatch_catalogsearch_result_index>
			<controller_action_postdispatch_catalog_seo_sitemap_product>
				<observers>
					<auit_ppager_observer>
						<type>singleton</type>
						<class>auit_ppager/observer</class>
						<method>controllerActionPostdispatchCatalogSeoSitemap</method>
					</auit_ppager_observer>
				</observers>
			</controller_action_postdispatch_catalog_seo_sitemap_product>

			<controller_action_postdispatch_adjnav_ajax_category>
				<observers>
					<auit_ppager_observer>
						<type>singleton</type>
						<class>auit_ppager/observer</class>
						<method>controllerActionAjaxPostdispatch</method>
					</auit_ppager_observer>
				</observers>
			</controller_action_postdispatch_adjnav_ajax_category>
			
			 <!-- 
			<controller_action_postdispatch>
				<observers>
					<auit_ppager_observer>
						<type>singleton</type>
						<class>auit_ppager/observer</class>
						<method>controllerActionPostdispatch2</method>
					</auit_ppager_observer>
				</observers>
			</controller_action_postdispatch>
			 -->
		</events>
    </global>
    <default>
    	<auit_ppager>
    		<general>
    			<enabled>1</enabled>
    			<license>0000-0000-0000-0000</license>
	    		<frame_length>10</frame_length>
    		</general>
    	</auit_ppager>
    </default>
</config>