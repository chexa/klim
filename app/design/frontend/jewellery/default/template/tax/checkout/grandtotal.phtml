<?php if ($this->includeTax() && $this->getTotalExclTax()>=0):?>
<dt class="gesamt"><strong><?php echo $this->helper('tax')->__('Grand Total Excl. Tax')?>:</strong></dt>
<dd class="gesamt"><strong><?php echo $this->helper('checkout')->formatPrice($this->getTotalExclTax()) ?></strong></dd>
<?php echo $this->renderTotals('taxes', $this->getColspan()); ?>
<dt><strong><?php echo $this->helper('tax')->__('Grand Total Incl. Tax')?>:</strong></dt>
<dd><strong><?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?></strong></dd>
<?php else:?>
<dt class="gesamt"><strong><?php echo $this->getTotal()->getTitle() ?>:</strong></dt>
<dd class="gesamt"><strong><?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?></strong></dd>
