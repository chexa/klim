<?xml version="1.0"?>
<layout version="0.1.0">
	<adminhtml_cms_page_index>
        <update handle="editor"/>
        <reference name="root">
            <action method="setTemplate"><template>cms/page/index.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="setCanLoadTinyMce"><flag>1</flag></action>
        </reference>
        <reference name="left">
            <block name="page.tree" type="adminhtml/cms_page_tree" template="cms/page/tree.phtml"/>
        </reference>
        <remove name="content"/>
    </adminhtml_cms_page_index>
    
    <adminhtml_cms_page_edit>
        <update handle="editor"/>
        <reference name="head">
            <action method="setCanLoadTinyMce"><flag>1</flag></action>
        </reference>
    </adminhtml_cms_page_edit>
    
    <adminhtml_cms_page_permissions_index>
        <reference name="head">
            <action method="setCanLoadExtJs"><flag>1</flag></action>
        </reference>
        <reference name="content">
            <block type="adminhtml/template" name="cms_page_permissions" template="cms/page/permissions/index.phtml">
                <block type="adminhtml/store_switcher" name="store_switcher" template="cms/page/store/switcher.phtml">
                    <action method="setUseConfirm"><params>0</params></action>
                </block>
                <block type="adminhtml/customer_group_switcher" name="customer_group_switcher" template="customer/group/switcher.phtml">
                    <action method="setUseConfirm"><params>0</params></action>
                </block>
                <block type="adminhtml/cms_page_permissions_tree" name="cms_page_permissions_tree" template="cms/page/permissions/tree.phtml"/>
            </block>
        </reference>
    </adminhtml_cms_page_permissions_index>
</layout>